                      android:id="@+id/txt_btn_accept_order" android:background="@drawable/bg_common_red_btn"
                      android:paddingLeft="10.0dip" android:paddingTop="5.0dip" android:paddingRight="10.0dip"
                      android:paddingBottom="5.0dip" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="抢单"/>
        </LinearLayout>
