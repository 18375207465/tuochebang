                    android:layout_width="fill_parent" android:layout_height="40.0dip">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                      android:layout_width="wrap_content" android:layout_height="fill_parent">
            <TextView android:id="@+id/txt_desc_price" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_marginLeft="12.0dip" android:text="预估价格"/>
            <TextView android:textColor="@color/txt_common_red_color" android:id="@+id/txt_price"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="10.0dip" android:text="¥386.00"
