                      android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="四川省郫县"/>
        </LinearLayout>
        <View android:background="@color/common_line_color" android:layout_width="fill_parent"
              android:layout_height="1.0dip" android:layout_marginTop="15.0dip"/>
