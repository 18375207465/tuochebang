                      android:layout_height="wrap_content" android:layout_marginLeft="12.0dip"
                      android:layout_marginTop="10.0dip">
            <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/txt_info_color"
                      android:layout_width="80.0dip" android:layout_height="wrap_content" android:text="起点:"/>
            <TextView android:textSize="@dimen/txt_size_16sp" android:id="@+id/txt_go_location"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="天府大道光明城市 "/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_marginLeft="12.0dip"
                      android:layout_marginTop="10.0dip">
            <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/txt_info_color"
                      android:layout_width="80.0dip" android:layout_height="wrap_content" android:text="终点:"/>
