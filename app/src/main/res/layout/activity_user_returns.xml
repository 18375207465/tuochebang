<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent" android:layout_height="fill_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="?colorPrimary"
                                       android:layout_width="fill_parent" android:layout_height="wrap_content"
                                       tl:title="我的返程车" tl:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                       tl:navigationIcon="@mipmap/icon_back_white"
                                       tl:titleTextColor="@color/color_ffffff"
                                       tl:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <com.framework.app.component.view.CommonTabLayout android:id="@+id/tl_1" android:background="#ffffffff"
                                                      android:paddingTop="5.0dip" android:paddingBottom="5.0dip"
                                                      android:layout_width="fill_parent" android:layout_height="48.0dip"
                                                      tl:tl_divider_color="#ffdddddd" tl:tl_divider_width="1.0dip"
                                                      tl:tl_indicator_anim_enable="true"
                                                      tl:tl_indicator_color="@color/txt_common_red_color"
                                                      tl:tl_indicator_height="3.0dip"
                                                      tl:tl_indicator_margin_left="20.0dip"
                                                      tl:tl_indicator_margin_right="20.0dip"
                                                      tl:tl_textSelectColor="@color/txt_common_red_color"
                                                      tl:tl_textUnselectColor="@color/txt_title_color"
                                                      tl:tl_underline_color="#ffdddddd"
                                                      tl:tl_underline_height="1.0dip"/>
    <android.support.v4.view.ViewPager android:id="@+id/view_pager" android:layout_width="fill_parent"
                                       android:layout_height="fill_parent"/>
</LinearLayout>