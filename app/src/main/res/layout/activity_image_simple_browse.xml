<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:background="@color/color_ffffff"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="?colorPrimary"
                                       android:layout_width="fill_parent" android:layout_height="wrap_content"
                                       app:title="图片详情" app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                       app:navigationIcon="@mipmap/icon_back_white"
                                       app:titleTextColor="@color/color_ffffff"
                                       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView android:textSize="16.0sp" android:textColor="@color/color_ffffff" android:layout_gravity="right"
                  android:id="@+id/tcb_delete_txt" android:padding="3.0dip" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginRight="16.0dip" android:text="删除"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <tuochebang.appcomponent.view.HackyViewPager android:id="@+id/view_pager"
                                                     android:background="@android:color/transparent"
                                                     android:layout_width="fill_parent"
                                                     android:layout_height="fill_parent"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_indicator" android:visibility="gone"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginBottom="20.0dip" android:layout_alignParentBottom="true"
                      android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>